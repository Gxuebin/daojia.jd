@import '../../pages/index/index.wxss';

.page {
    width: 100%;
    box-sizing: border-box;
    font-size: 26rpx;
}

.page, .weui-search-bar{
    padding: 0;
    margin: 0;
    border: 0;
    background-color: #fff;
}

.weui-search-bar {
    margin: 20rpx;
    display: flex;
    justify-content: space-between;
    height: 60rpx;
    line-height: 60rpx;
}

.weui-search-bar__form {
    flex: 1;
    background-color: rgba(0, 0, 0, 0.05);
}

.weui-search-bar__input {
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.weui-search-bar__text {
    font-size: 26rpx;
    color: rgba(0, 0, 0, 0.7);
    padding-left: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.searchbar-result {
    font-size: 28rpx;
}

.details {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    position: relative;
    margin: 0 20rpx;
    justify-content: space-between;
    background-color: #fff;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    margin-left: 160rpx;
    padding-top: 20rpx;
}
.details image{
    border: 1px solid #fff;
    border-radius: 5px;
}
.details .cate_left {
    margin: 0;
    padding: 0;
    flex: 1;
    padding: 20rpx 20rpx 0 0;
}

.details .cate_right {
    flex: 2;
}
.cate-detail .title text{
    font-size: 26rpx;
    letter-spacing: 2rpx;
}
.cate-detail .sale_status {
    font-size: 24rpx;
    color: rgba(0, 0, 0, 0.5);
}
.cate-detail .d_price {
    display: inline-block;
    background-color: #FFCE0B;
    color: #fff;
    font-size: 24rpx;
    border-radius: 2px; 
}
.price .cur_price {
    color: red;
    font-size: 30rpx;
    margin-right: 20rpx;
}
.price .pre_price {
    color: rgba(0, 0, 0, 0.5);
    font-size: 24rpx;
    text-decoration: line-through;
}
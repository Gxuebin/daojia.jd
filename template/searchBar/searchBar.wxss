.page {
    width: 100%;
    box-sizing: border-box;
    font-size: 26rpx;
}

.page, .weui-search-bar{
    padding: 0;
    margin: 0;
    border: 0;
    background-color: #fff;
}

.weui-search-bar {
    margin: 20rpx;
    display: flex;
    justify-content: space-between;
    height: 60rpx;
    line-height: 60rpx;
}

.weui-search-bar__form {
    flex: 1;
    background-color: rgba(0, 0, 0, 0.05);
}

.weui-search-bar__input {
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.weui-search-bar__text {
    font-size: 26rpx;
    color: rgba(0, 0, 0, 0.7);
    padding-left: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
}

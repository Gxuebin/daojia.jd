page, .main {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.main {
    background-color: #F4F4F4;
    height: 100vh;
}


.cart-header {
    width: 100%;
    display: flex;
    /* background-color: #4DCC57; */
}

.clear_cart {
    /* position: absolute; */
    /* right: 0; */
}

.shopCar {
    padding: 40rpx;
}

.shop-car_card {
    display: flex;
    flex-direction: column;
    justify-content: baseline;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-radius: 6rpx;
    box-shadow: 4rpx 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header_shopName {
    background-color: #FCFCFC;
    font-size: 32rpx;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.card-body_goods {
    display: flex;
    flex-direction: row;
    padding: 20rpx;
}

.goods-item {
    display: flex;
    flex-direction: column;
    margin: 10rpx 20rpx;
    position: relative;
}

.item-image {
    width: 100rpx;
    height: 100rpx;
}

.item-price {
    font-size: 26rpx;
    color: red;
    text-align: center;
    margin-top: 10rpx;
}

.empty_img {
    width: 100%;
    height: 80vh;
    background: url(//static-o2o.360buyimg.com/daojia/new/images/cart/cart_empty.png) no-repeat center;
    background-size: 96px;
    -webkit-transform: translateY(-80px);
    transform: translateY(-80px);
    /* z-index: -9; */
    display: flex;
}

.prompt {
    /* display: block; */
    position: relative;
    margin: 0 auto;
    text-align: center;
    top: 70%;
}

.emptyCar {
    font-size: 32rpx;
    color: rgba(0, 0, 0, 0.6);
}

.weui-btn.navToMain {
    color: #4DCC57;
    font-weight: normal;
    font-size: 32rpx;
    border: #4DCC57;
}
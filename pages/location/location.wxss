.page {
    box-sizing: border-box;
    width: 100%;
}

.address {
    background-color: #F4F4F4;
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.myAddrText {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    margin-left: 40rpx;
    color: rgba(0, 0, 0, 0.7);
}

.weui_cell__nav-chooseLocation {
    margin-top: 0;
    padding: 10rpx;
    color: #47B34F;
}

.myAddressList {
    width: 100%;
    background-color: #fff;
    
}

.myAddress .receiver_info {
    border-top: 1rpx solid rgba(0, 0, 0, 0.05);
    padding: 20rpx 0 20rpx 40rpx;
    position: relative;
}

.myAddress .receiveer_msg,.receiver_addr {
    max-width: 600rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.myAddress .myAddressList text {
    padding-right: 40rpx;
    font-size: 28rpx;
}

.myAddress .receiver_info .alterInfo image{
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
}
.newAddrIcon {
    text-align: center;
    margin-top: 50%;
    transform: translateY(-50%);
}
.newAddrIcon image {
    width: 180rpx;
    height: 180rpx;
}
.newAddrText {
    text-align: center;
    font-size: 32rpx;
    color: rgba(0, 0, 0, 7);
    margin-top: -60rpx;
}

.newAddrBtn {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.newAddrBtn text{
    font-size: 28rpx;
}

.miniBtn {
    margin-top: 40rpx;
    text-align: center;
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}


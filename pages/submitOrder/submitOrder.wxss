.main {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
.order {
    height: 100vh;
    background-color: #F2F2F2;
    color: rgba(0, 0, 0, 0.8);
}
.order-hd {
    background-color: #4DCC57;
    width: 100%;
}
.order-hd .address .new-addr_btn {
    position: relative;
    top: 0;
}
.order-hd .address .new-addr_btn .newAddrBtn {
    display: inline-block;
    margin-left: 50%;
    transform: translateX(-50%);
    border: 1px solid #fff;
    border-radius: 100rpx;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    background-color: #4DCC57;
    padding: 0 60rpx;
    margin-top: 40rpx;
    margin-bottom: 80rpx;
}
.order-bd {
    margin: 20rpx;
    position: relative;
    top: -70rpx;
}

.order-bd .delive-way, .goods-info {
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 4rpx 8rpx 20rpx rgba(0, 0, 0, 0.05);
    margin-bottom: 20rpx;
}

.order-bd .delive-way {
    font-size: 28rpx;
    padding: 16rpx 0;
}

.deliver {
    display: inline-block;
    background-color: #A4A4A4;
    border-radius: 6rpx;
    padding: 0 6rpx;
}

.deliver text {
    color: #fff;
    font-size: 20rpx;
}
.deliver-time {
    color: #2486FF;
}


.order-bd .goods-info {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx 30rpx 30rpx;
    margin-top: 0;
}

.shop-name {
    font-size: 32rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    vertical-align: middle;
}
.shop-name {
    flex: 1;
}
.shop-name .before {
    border-top: 1px solid #000;
    border-bottom: 1px solid #000;
    height: 6rpx;
    width: 100rpx;
}

.goods-detail {
    display: flex;
    flex-direction: row;
    position: relative;
    margin-top: 20rpx;
}
.goods-detail_img image {
    width: 120rpx;
    height: 120rpx;
    background-color: #fff;
}

.goods-detail_text {
    flex: 1;
    display: inline-block;
    font-size: 28rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    letter-spacing: 4rpx;
}

.goods-detail_text .sum-price {
    position: absolute;
    right: 0rpx;
    bottom: 0;
}

.goods-num {
    text-align: center;
    background-color: #F2F2F2;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.6);
    letter-spacing: 4rpx;
    line-height: 1.9;
    border-radius: 4rpx;
}
.total-price,
.deliver-price,
.conpon-desc {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    margin: 10rpx 0;
}

.conpon-desc .conpon-price {
    color: red;
}

.order-summary {
    font-size: 30rpx;
    padding: 20rpx 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: flex-end;
    vertical-align: bottom;
}
.order-summary .actual-price {
    font-weight: bold;
    font-size: 36rpx;
    color: red;
}

.order-summary text{
    margin: 10rpx;
    display: inline;
    line-height: 36rpx;
}

.order-ft {
    box-sizing: border-box;
    width: 100vw;
    padding: 30rpx;
    background-color: #F2F2F2;
}

.order-ft .submit-order_btn button{
    width: 100%;
    font-size: 32rpx;
}
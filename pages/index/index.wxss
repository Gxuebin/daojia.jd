/**index.wxss**/
.main {
  width: 100%;
  box-sizing: border-box;
}
.main .header {
  background-image: url("https://img30.360buyimg.com/mobilecms/jfs/t17566/50/378323602/3364/49ed6f79/5a719023Na50b8b1b.png");
  background-size: 100% 160px;
  opacity: 1;
  padding: 0 30rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.main .header .hd {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  color: #fff;
}

.main .header .location {
  flex: 1;
}

.main .header .location .par {
  width: 80%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  position: relative;
  padding-right: 20rpx;
}

.main .header .location .par text{
  display: inline;
}

.main .header .location .par::after{
  content: '';  
  position: absolute;  
  border-left: 8rpx solid rgba(0, 0, 0, 0);  
  border-top: 8rpx solid #fff;  
  border-bottom: 8rpx solid rgba(0, 0, 0, 0);  
  border-right: 8rpx solid rgba(0, 0, 0, 0);
  top: 45%;
  right: 0;
}

.main .header .message {
  margin-top: 8rpx;
} 

.main .header .home-search .search_navigator {
  background-color: #fff;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius: 68rpx;
  width: 100%;
  position: relative;
}

.main .header .home-search image {
  position: absolute; 
  left: 22%;
  top: 36%;
  z-index: 9;
}

.main .cateBar {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.main .cateBar .cateItem {
  flex: 1;
}

.main .cateBar .cateItem image{
  display: block;
  margin: 20rpx auto;
}

.main .cateBar .cateItem text{
  display: block;
  font-size: 26rpx;
  text-align: center;
  letter-spacing: 4rpx;
}

.main .nearShop {
  padding: 20rpx;
  text-align: center;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
}

.main .nearShop text {
  display: inline;
  font-size: 28rpx;
}

.main .nearShop text::before {
  content: "";
  display: block;
  width: 200rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 50%;
  left: 10%;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.main .nearShop text::after {
  content: "";
  display: block;
  width: 200rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 50%;
  right: 10%;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.content .shop{
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
}

.content .shop .shopImg image {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin: 0 20rpx;
}

.content .shop .shopMsg {
  flex: 1;
  color: rgba(0, 0, 0, 0.6);
  font-size: 22rpx;
}

.content .shop .shopMsg .shopName {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  padding-bottom: 10rpx;
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content .shop .shopMsg .deliver {
  display: inline-block;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 6rpx;
  margin-top: 8rpx;
  margin-bottom: 6rpx;
  height: 30rpx;
}

.content .shop .shopMsg .deliver text {
  margin: 0 10rpx;
}

.content .shop .shopMsg .saleStatus {
  padding: 10rpx 0; 
}

.content .shop .shopMsg .saleStatus .showStars image{
   float: left;
   margin-top: 2rpx;
}

.content .shop .shopMsg .saleStatus .sale2month {
  margin-left: 30rpx;
  position: relative;
}

.content .shop .shopMsg .saleStatus .sale2month::before {
  content: "";
  width: 4rpx;
  height: 20rpx;
  background-color:rgba(0, 0, 0, 0.2);
  position: absolute;
  transform: scaleX(0.5);
  left: -20rpx;
  top: 50%;
  margin-top: -10rpx;
}

.content .shop .shopMsg .deliverMsg,.activities>.activity{
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content .shop .shopMsg .activities{
  border-top: 1px dotted rgba(0, 0, 0, 0.2);
  margin-top: 16rpx;
  position: relative;
}
.content .shop .shopMsg .activities .activity {
  padding-top: 16rpx;
}
.content .shop .shopMsg .activities .activity text {
  border-radius: 6rpx;
  color: #fff;
  padding: 0 2rpx;
}
.content .shop .shopMsg .activities .activity .coupon,.firstOrder {
  background-color: #FF6C57;
}

.content .shop .shopMsg .activities .activity .purchaseOff {
  background-color: #5FBC65;
}

.content .shop .shopMsg .activities .activity .fright {
  background-color: #5CA7FF;
}

.content .shop .shopMsg .activities .activity .packout {
  background-color: #FF6A00;
}
.content .shop .shopMsg .activities .more_activity {
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.6);
  border-left: 2rpx solid rgba(0, 0, 0, 0.6);
  transform: rotateZ(-135deg);
  position: absolute;
  right: 6%;
  top: 16rpx;
}

.content .shop .shopMsg .activities ._rotate {
  transform: rotateZ(45deg);
  top: 24rpx;
}

.noMoreShop {
  text-align: center;
  color: rgba(0, 0, 0, 0.6);
  font-size: 26rpx;
  position: relative;
  background-color: #F4F4F4;
  height: 120rpx;
  line-height: 120rpx;
}
.noMoreShop text::before {
  content: "";
  display: block;
  width: 100rpx;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 50%;
  left: 23%;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.noMoreShop text::after {
  content: "";
  display: block;
  width: 100rpx;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 50%;
  right: 23%;
  transform: scaleY(0.5);
  transform-origin: 0 0;
}